from collections import Counter
import re

file_path = r'C:/Users/ssimm/OneDrive/Desktop/S374865_HIT137_Assignment 2/HIT137-Assignment-2-Group-156/combined_text.txt'

def top_30(filepath):
    with open(filepath, 'r', encoding='utf-8') as file:
        text = file.read().lower()
        words = re.findall(r'\b\w+\b', text)
        wordcount = Counter(words)
        common = wordcount.most_common(30)
        return common

top = top_30(file_path)

print("The top 30 words in the file are as follows:")

for word, count in top:
    print(f'{word} appears {count} times')